# {{ ansible_managed }}

{% set ver_distrib_minor = ansible_distribution_version | regex_replace('^' + ansible_distribution_major_version + '\\.', '') %}
[base]
name=Oracle Linux
baseurl=https://yum.oracle.com/repo/OracleLinux/OL{{ ansible_distribution_major_version }}/{{ ver_distrib_minor }}/baseos/base/{{ ansible_architecture }}/
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-oracle